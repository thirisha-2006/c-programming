#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int n,i,num;
    int positive=0,negative=0;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&num);
        if(num>0)
            positive++;
        else if(num<0)
            negative++;
    }
    printf("Count of Positive Integer is %d.00\n",positive);
    printf("Count of Negative Integer is %d.00\n",negative);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
